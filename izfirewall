 ## From NET1
 #@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
 # from NET1 to NET0
 #iptables -A FORWARD -p ALL  -i $NET1_IF -o $NET0_IF -j accept01
 #iptables -A FORWARD -p ALL  -i $NET1_IF -o $NET0_IF -j DMZ_TO_LAN

